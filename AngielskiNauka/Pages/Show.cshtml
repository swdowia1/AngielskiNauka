@page "{id:int?}"
@model AngielskiNauka.Pages.ShowModel
@inject LocService ls
@{
    int lp = 1;
}
<h1>Liczba słów @Model.slowa.Count</h1>
<table class="table table-hover">
    <thead>
        <tr>
            <th>@ls.Get("lp")</th>
            <th>@ls.Get("ang")</th>
            <th>@ls.Get("pol")</th>
            <th>Stan</th>
            <th>Data</th>


        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.slowa)
        {
            <tr>
                <td>@(lp++)</td>
                <td>@item.Ang</td>
                <td>@item.Pol</td>
                
                <td>@item.Stan</td>
                <td>@item.Data</td>

            </tr>

        }

    </tbody>
</table>
