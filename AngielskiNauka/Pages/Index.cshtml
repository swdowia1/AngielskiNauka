@page
@model AngielskiNauka.Pages.IndexModel
<style>
    body {
        background: #f0f4f8;
        font-family: 'Arial', sans-serif;
        height: 100vh;
        margin: 0;
    }

    .quiz-container {
        background: white;
        padding: 30px;
        border-radius: 15px;
        box-shadow: 0 8px 20px rgba(0, 0, 0, 0.1);
        width: 400px;
        text-align: center;
    }

    .question {
        font-size: 22px;
        font-weight: bold;
        margin-bottom: 20px;
        color: #333;
    }

    .answers {
        display: flex;
        flex-direction: column;
        gap: 15px;
    }

        .answers button {
            background-color: #e3e9f0;
            border: none;
            padding: 12px;
            border-radius: 10px;
            font-size: 16px;
            cursor: pointer;
            transition: background-color 0.3s, transform 0.2s;
        }

            .answers button:hover {
                background-color: #c5d3e0;
                transform: scale(1.02);
            }

            .answers button:active {
                background-color: #a5b8cd;
                transform: scale(0.98);
            }
</style>
<span style="color:brown;font-size:x-large" id="info"></span>
<div class="quiz-container">
    <div class="question" id="ang"></div>
    <div class="answers">
        <button onclick="answer(0)" id="pol0"></button>
        <button onclick="answer(0)" id="pol1"></button>
        <button onclick="answer(0)" id="pol2"></button>
        <button onclick="answer(0)" id="pol3"></button>
    </div>
</div>
<script>



     var poziom = '@Model.poziom';
     var mnoznik = '@Model.mnoznik';
         var iloscall = '@Model.ile';
     var aktualny = 0;
      console.log(poziom,mnoznik);
      LoadData(poziom)

    
      function answer(id) {
         
          var slowo = slownik.slowa[aktualny];
          if (slowo.pol == slowo.odpowiedzi[id]) {          
          
            slowo.stan = 1;
        }
        else {
         infoapp(slowo.ang+':'+slowo.pol);
            slowo.stan = 2;
        }
          aktualny=aktualny+1;
           if (aktualny >= iloscall) {
            infoapp('koniec testu')



        }
        else
        {
          showData(aktualny);}

      }
    function infoapp(tekst) {
        console.log(tekst);
       $('#info').text(tekst)
    }
     function showData(pos) {

        var d = slownik.slowa[pos];
        console.log(d);
        $('#ang').text(d.ang);
        $('#pol0').text(d.odpowiedzi[0]);
        $('#pol1').text(d.odpowiedzi[1]);
         $('#pol2').text(d.odpowiedzi[2]);
         $('#pol3').text(d.odpowiedzi[3]);


    }
      function LoadData(p)
      {
         infoapp('Ładujemy dane')

        aktualny = 0;

        getjson("api/ang/" + poziom, function (data) {

            console.log(data);

              infoapp('Zaczynamy')


            slownik = data;

            showData(0)

        }, function (data) {









            console.log(data.message);





        })
    }

</script>