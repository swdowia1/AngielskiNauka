        aktualny = 0;
        poprawne = 0;
        bledne = 0;
        aktualizujWyniki();

        getjson("api/ang/" + poziom, function(data) {

            infoapp('')

         


            slownik = data;

            showData(0)

        }, function(data) {

            console.log(data.message);




        })
    }
</script>