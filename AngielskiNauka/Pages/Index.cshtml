<style>
    body {
        background: #f0f4f8;
        font-family: 'Arial', sans-serif;
        height: 100vh;
        margin: 0;
    }

    .quiz-container {
        background: white;
        padding: 30px;
        border-radius: 15px;
        box-shadow: 0 8px 20px rgba(0, 0, 0, 0.1);
        width: 400px;
        text-align: left;
    }

    .question {
        font-size: 22px;
        font-weight: bold;
        margin-bottom: 20px;
        color: #333;
    
    }

    .answers {
        display: flex;
        flex-direction: column;
        gap: 15px;
      
    }

        .answers button {
            background-color: #e3e9f0;
            border: none;
            padding: 12px;
            border-radius: 10px;
            font-size: 16px;
            cursor: pointer;
            transition: background-color 0.3s, transform 0.2s;
            text-align: left;
        }

            .answers button:hover {
                background-color: #c5d3e0;
                transform: scale(1.02);
            }

            .answers button:active {
                background-color: #a5b8cd;
                transform: scale(0.98);
            }

    .result {
        margin-top: 25px;
        font-size: 20px;
        font-weight: bold;
        color: #2b6cb0;
    }

    .summary {
        margin-bottom: 20px;
        padding: 10px;
        background: #fff;
        border-radius: 8px;
        box-shadow: 0 2px 5px rgba(0,0,0,0.1);
    }

        .summary div {
            margin: 5px 0;
        }

    .words {
        background: #fff;
        padding: 10px;
        border-radius: 8px;
        box-shadow: 0 2px 5px rgba(0,0,0,0.1);
    }

    .word {
        margin: 5px 0;
    }

        .word strong {
            color: #2c3e50;
        }
</style>
