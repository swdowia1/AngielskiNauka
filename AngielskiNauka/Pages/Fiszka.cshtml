<div onclick="dalej()" style="height:100%">
   
    Klawisz: <-- --> w dół idz do pierwszego w góry pokaż tłumaczenie
    <br />    <br />    <br />
    <div class="container" onclick="dalej()">
        <div class="row">
            <div id="ang" class="fontfiszka col-md-6 h1 bg-warning text-dark">Ang</div>
              
        </div>
    </div>
     
    <div class="container" onclick="dalej()">
        <div id="divpol" class="row">
            <div class="col-md-6"><span id="pol" class="fontfiszka">pol</span></div>
        </div>
    </div>
        <div class="container">
            <div class="row">
                <div class="col-md-6"><span id="stan" class="fontfiszka"></span></div>
            </div>
        </div>


</div>
<button onclick="divshow()">Pokaz</button>
<hr />
<partial name="PoziomView" model="@Model.poziom" />
<script>
    var pos = 0;


    $('#divpol').hide();
    function divshow() {
        console.log('ddd')
        $('#divpol').show();

    }
    document.addEventListener("keydown", function (event) {
        var code;
        if (event.key !== undefined) {
            code = event.key;
        } else if (event.keyIdentifier !== undefined) {
            code = event.keyIdentifier;
        } else if (event.keyCode !== undefined) {
            code = event.keyCode;
        }
        console.log(code);
        handleArrow(code);
    });

    function handleArrow(code) {
        console.log('pozycja',pos,code)
        $('#divpol').hide();
        switch (code) {
            case 'ArrowLeft':
                pos = pos - 1;
                pokaz(pos);
                break;
            case 'ArrowRight':
                pos = pos + 1;
                pokaz(pos);
                break;
                
            case 'ArrowUp':
                $('#divpol').show();
               
                break;
            default:
                pos = 0;
                pokaz(pos);
                
          
        }
    }

    var slowa = @Html.Raw(Newtonsoft.Json.JsonConvert.SerializeObject(Model.List));
    var slowailosc = slowa.length;

    function pokaz(pozycja) {
      
        if (pozycja == -1) {
           
            pos = slowa.length - 1;
        }
        else {

            if (pozycja == slowa.length ) {
                pos = 0;
            }
        }
        var s = slowa[pos]
        console.table(s.Ang);
        $("#ang").html(s.Ang);
        $("#pol").html(s.Pol);
        $("#stan").html(pozycja+'/'+slowailosc);
    }
    function dalej() {
        pos = pos + 1;
        pokaz(pos);

    }
    pokaz(pos);
</script>
